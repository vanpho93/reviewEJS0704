<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Admin</title>
        <style>
            table, th, td {
                border: 1px solid black;
                border-collapse: collapse;
                padding: 2px;
            }
        </style>
    </head>
    <body>
        <table>
            <tr>
                <td>STT</td>
                <td>TEN</td>
                <td>MO TA</td>
                <td>HINH ANH</td>
                <td>ID VIDEO</td>
                <td>XU LY</td>
            </tr>
            <% mang.forEach((e, i) => { %>
                <tr>
                    <td><%= i + 1 %></td>
                    <td><%= e.name %></td>
                    <td><%= e.desc %></td>
                    <td><img src="images/background/<%= e.image %>"/></td>
                    <td><%= e.idVideo %></td>
                    <td>
                        <a href="/sua/<%= i %>">SUA</a>
                        <br /><br />
                        <a href="/xoa/<%= i %>" onclick="return confirm('Are you sure you want to delete this item?');">XOA</a>
                    </td>
                </tr>
            <% }); %>
        </table>
        <form action="/admin/addProduct" method="POST" enctype="multipart/form-data">
            <input type="text" placeholder="Enter name" name="name" />
            <br /><br />
            <input type="text" placeholder="Enter desc" name="desc" />
            <br /><br />
            <input type="file" name="hinhdaidien" />
            <br /><br />
            <input type="text" placeholder="Enter idVideo" name="idVideo" />
            <br /><br />
            <button>Add product</button>
        </form>
    </body>
</html>